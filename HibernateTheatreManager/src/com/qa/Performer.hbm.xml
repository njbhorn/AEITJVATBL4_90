<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.qa.Performer" table="performer">

		<id name="membershipID" type="int">
			<column name="MembershipID" length="4" not-null="true" />
			<generator class="assigned" />
		</id>

		<property name="firstName">
			<column name="FirstName" length="30" not-null="false" />
		</property>

		<property name="surname">
			<column name="Surname" length="30" not-null="true" />
		</property>

		<property name="height">
			<column name="Height" length="4" not-null="true" />
		</property>

		<property name="groupID" >
			<column name="GroupID" length="4" not-null="true" />
		</property>

	</class>

</hibernate-mapping>